<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:id="@+id/detail_fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/review_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:paddingRight="5dp"/>
        <TextView
            android:id="@+id/name_detail"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="5dp"/>

    </androidx.appcompat.widget.Toolbar>

    <!--add google maps location to view-->

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/current_rating"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="75dp"
        android:text="@string/noise_rating"
        android:textSize="20dp"/>

    <!--noise measurment images-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="75dp"
        android:text="@string/light_rating"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/write_review" />

    <!--lighting measurement images-->


</LinearLayout>